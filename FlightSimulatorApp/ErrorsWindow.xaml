<Window x:Class="FlightSimulatorApp.ErrorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="ErrorsWindow" Height="300" Width="400" FontSize="16" Foreground="Red" Background="Black">
    <ScrollViewer>
        <TextBlock Text="{Binding Path = VM_Err, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 10 0 0" SourceUpdated="TextBlock_SourceUpdated" TargetUpdated="TextBlock_TargetUpdated"/>
    </ScrollViewer>
</Window>
